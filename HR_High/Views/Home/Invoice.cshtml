@model DLL.ViewModels.Home.SalaryReport_VM
@{
    ViewData["Title"] = "Invoice";
    Layout = "~/Views/Shared/_MainLayOut.cshtml";
}

<div class="main-content">
    <div class="container">
        <div class="container-fluid">
            <section class="invoice-template">
                <div class="card">
                    <div class="card-body p-3">
                        <div id="invoice-template" class="card-block">
                            <!-- Invoice Company Details -->
                            <div id="invoice-company-details" class="row">
                                <div class="col-6 text-left">
                                    <img src="../app-assets/img/logo.png" alt="company logo" class="mb-2" width="70">
                                    <ul class="px-0 list-unstyled">
                                        <li class="text-bold-800">Pioneer Solutions Company </li>
                                        <li>Cairo,</li>
                                        <li>Naser City ,</li>
                                        <li>102 Makrim Ebid,</li>

                                    </ul>
                                </div>
                                <div class="col-6 text-right">
                                    <h2>INVOICE</h2>
                                    <p class="pb-3"># INV-001001</p>
                                    <ul class="px-0 list-unstyled">
                                        <li>Balance Due</li>
                                        <li class="lead text-bold-800">2100 $</li>
                                    </ul>
                                </div>
                            </div>

                            <!--/ Invoice Customer Details -->
                            <!-- Invoice Items Details -->
                            <div id="invoice-items-details" class="pt-2">
                                <div class="row" style="overflow-x: scroll; overflow-y: hidden;">
                                    <table class="table table-striped table-bordered zero-configuration mt-40">
                                        <thead>
                                            <tr>
                                                <th class="text-center"> Employees_Name</th>
                                                <th class="text-center">Phone</th>
                                                <th class="text-center">Salary</th>
                                                <th class="text-center">Attendance_days</th>
                                                <th class="text-center">Absent_days</th>
                                                <th class="text-center">Overtime_hours</th>
                                                <th class="text-center"> Discount_hours</th>
                                                <th class="text-center">Extra</th>
                                                <th class="text-center"> discount</th>
                                                <th class="text-center">Total</th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td class="text-center">@Model.Name</td>
                                                <td class="text-center">@Model.Phone</td>
                                                <td class="text-center">@Model.Salary</td>
                                                <td class="text-center">@Model.AttendanceDays</td>
                                                <td class="text-center">@Model.AbsentDays</td>
                                                <td class="text-center">@Model.OvertimeHours</td>
                                                <td class="text-center">@Model.DiscountHours</td>
                                                <td class="text-center">@Model.Extra</td>
                                                <td class="text-center">@Model.Discount</td>
                                                <td class="text-center">@Model.Total</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                                <div class="row mt-4">
                                    <div class="col-md-6 col-sm-12 text-left">
                                        <p class="lead">Payment Methods:</p>
                                        <div class="row">
                                            <div class="col-12">
                                                <table class="table table-borderless table-sm">
                                                    <tbody>
                                                        <tr>
                                                            <td class="text-center">Bank name:</td>
                                                            <td class="text-right">ABC Bank, USA</td>
                                                        </tr>
                                                        <tr>
                                                            <td class="text-center">Acc name:</td>
                                                            <td class="text-right">Amanda Orton</td>
                                                        </tr>
                                                        <tr>
                                                            <td class="text-center">IBAN:</td>
                                                            <td class="text-right">FGS165461646546AA</td>
                                                        </tr>
                                                        <tr>
                                                            <td class="text-center">SWIFT code:</td>
                                                            <td class="text-right">BTNPP34</td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-sm-12">
                                        <p class="lead">Total due</p>
                                        <div class="table-responsive">
                                            <table class="table">
                                                <tbody>
                                                    <tr>
                                                        <td class="text-center">Sub Total</td>
                                                        <td class="text-right">$ 14,900.00</td>
                                                    </tr>
                                                    <tr>
                                                        <td class="text-center">TAX (12%)</td>
                                                        <td class="text-right">$ 1,788.00</td>
                                                    </tr>
                                                    <tr>
                                                        <td class="text-bold-800">Total</td>
                                                        <td class="text-bold-800 text-right"> $ 16,688.00</td>
                                                    </tr>
                                                    <tr>
                                                        <td class="text-center">Payment Made</td>
                                                        <td class="pink text-right">(-) $ 4,688.00</td>
                                                    </tr>
                                                    <tr class="bg-grey bg-lighten-4">
                                                        <td class="text-bold-800">Balance Due</td>
                                                        <td class="text-bold-800 text-right">$ 12,000.00</td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                        <div class="text-center">
                                            <p>Authorized person</p>
                                            <img src="../app-assets/img/pages/signature-scan.png" alt="signature" class="width-250">
                                            <h6>Amanda Orton</h6>
                                            <p class="text-muted">Managing Director</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Invoice Footer -->
                            <div id="invoice-footer">
                                <div class="row">
                                    <div class="col-md-9 col-sm-12">
                                        <h6>Terms &amp; Condition</h6>
                                        <p>You know, being a test pilot isn't always the healthiest business in the world. We predict too much for the next year and yet far too little for the next 10.</p>
                                    </div>
                                    <div class="col-md-3 col-sm-12 text-center">
                                        <button type="button" class="btn btn-primary my-1"><i class="fa fa-paper-plane-o"></i> Send Invoice</button>
                                    </div>
                                </div>
                            </div>
                            <!--/ Invoice Footer -->
                        </div>
                    </div>
                </div>
            </section>
            <!--Invoice template ends-->
        </div>
    </div>
</div>
