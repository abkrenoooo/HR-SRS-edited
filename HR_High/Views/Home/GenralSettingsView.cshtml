 
@model DLL.ViewModels.Home.GenralSettings_VM
@{
    ViewData["Title"] = "Genral Settings ";
    Layout = "~/Views/Shared/_MainLayOut.cshtml";
}


<div class="main-content">
    <div class="container">
        <div class="container-fluid">
            <section id="horizontal-form-layouts">

                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <div class="card-title-wrap bar-success">
                                    <h4 class="card-title" id="horz-layout-basic">General Settings Form </h4>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="px-3">
                                    <form asp-action="GenralSettings" asp-controller="Home" class="form form-horizontal">
                                        <input type="hidden" id="id" asp-for="Id">
                                        <div class="form-body">
                                            <h4 class="form-section">
                                                <i class="icon-user"></i>General information
                                            </h4>
                                            <div class="form-group row">
                                                <label class="col-md-3 label-control" for="projectinput1">The extra: </label>
                                                <div class="col-md-9">
                                                    <input disabled type="text" id="projectinput1" class="form-control" asp-for="Extra">
                                                </div>
                                                <div class="row container m-auto d-flex justify-content-center">
                                                    <span asp-validation-for="Extra" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-md-3 label-control" for="projectinput2">
                                                    Discount:
                                                </label>
                                                <div class="col-md-9">
                                                    <input disabled type="text" id="projectinput2" class="form-control" asp-for="Discount">
                                                </div>
                                            </div>
                                            <div class="row container m-auto d-flex justify-content-center">
                                                <span asp-validation-for="Discount" class="text-danger"></span>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-md-3 label-control" for="projectinput7">Weekly Holidays: </label>
                                                <div class="col-md-9">
                                                    <input disabled type="checkbox" id="Satrday" asp-for="Satrday">
                                                    <label asp-for="Satrday"> Satrday</label><br>
                                                    <input disabled type="checkbox" id="Sunday" asp-for="Sunday">
                                                    <label asp-for="Sunday"> Sunday</label><br>
                                                    <input disabled type="checkbox" id="Monday" asp-for="Monday">
                                                    <label asp-for="Monday"> Monday</label><br>
                                                    <input disabled type="checkbox" id="Tuesday" asp-for="Tuesday">
                                                    <label asp-for="Tuesday"> Tuesday</label><br>
                                                    <input disabled type="checkbox" id="wednesday" asp-for="wednesday">
                                                    <label asp-for="wednesday"> wednesday</label><br>
                                                    <input disabled type="checkbox" id="Turthday" asp-for="Turthday">
                                                    <label asp-for="Turthday"> Turthday</label><br>
                                                    <input disabled type="checkbox" id="Friday" asp-for="Friday">
                                                    <label asp-for="Friday">Friday</label>
                                                    <br>
                                                </div>
                                            </div>

                                        </div>


                                        <div class="form-actions">
                                            <button type="button" class="btn btn-danger mr-1">
                                                <a asp-action="index" asp-controller="Home"><i class="icon-trash"></i> Cancel</a>

                                            </button>
                                            @if (AuthorizationService.AuthorizeAsync(User, Permissions.Module.Edit(Modules.GenralSettings.ToString())).Result.Succeeded
                                                || AuthorizationService.AuthorizeAsync(User, Permissions.Module.Create(Modules.GenralSettings.ToString())).Result.Succeeded)
                                            {
                                                <button type="button" class="btn btn-success">
                                                    <a asp-action="GenralSettings" asp-controller="Home"><i class="icon-note"></i> Edit</a>
                                                </button>}
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- // Basic form layout section end -->
        </div>
    </div>
</div>
