@model IQueryable<DLL.ViewModels.Employee.Employee_VM>
@{
    ViewData["Title"] = "Employees";
    Layout = "~/Views/Shared/_MainLayOut.cshtml";
}

<div class="main-content">
    <div class="container">
        <div class="container-fluid">
            <!-- Zero configuration table -->
            <section id="configuration">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <div class="card-title-wrap bar-success">
                                    <h4 class="card-title">Employees Information</h4>
                                </div>
                            </div>
                            <div class="card-body collapse show" style="overflow-x: scroll; overflow-y: hidden;">
                                <div class="card-block card-dashboard">

                                    <div class="row">
                                        <div class="col-sm-12 col-md-3">
                                            <div class="dataTables_length" id="DataTables_Table_0_length">
                                                <label>
                                                    Show
                                                    <select name="DataTables_Table_0_length" aria-controls="DataTables_Table_0" class="form-control form-control-sm">
                                                        <option value="10">10</option>
                                                        <option value="25">25</option>
                                                        <option value="50">50</option>
                                                        <option value="100">
                                                            100
                                                        </option>
                                                    </select>
                                                </label>
                                            </div>
                                        </div>
                                        <div class="col-lg-1"></div>
                                        <div class="col-sm-12 col-md-3">
                                            <div id="DataTables_Table_0_filter" class="dataTables_filter">
                                                <label>
                                                    Search:<input type="search"
                                                                  class="form-control form-control-sm" placeholder="" aria-controls="DataTables_Table_0">
                                                </label>
                                            </div>
                                        </div>
                                        <div class="col-lg-1"></div>
                                        @if (AuthorizationService.AuthorizeAsync(User, Permissions.Module.Create(Modules.Employee.ToString())).Result.Succeeded)
                                        {
                                            <div class="col-lg-3">
                                                <button id="addRow" class="btn btn-primary mb-2">
                                                    <i class="ft-plus"></i>&nbsp;
                                                    <a asp-action="Create" asp-controller="Employee">  Add new Employee</a>
                                                </button>
                                            </div>
                                        }
                                        </div>
                                    <table class="table table-striped table-bordered zero-configuration">
                                        <thead>
                                            <tr>
                                                <th class="text-center">Employees_Name</th>
                                                <th class="text-center">Phone_number</th>
                                                <th class="text-center">Date_of_birth</th>
                                                <th class="text-center">Type</th>
                                                <th class="text-center">Start_date</th>
                                                <th class="text-center">Salary</th>
                                                <th class="text-center">Attendance_date</th>
                                                <th class="text-center">check_out_date</th>
                                                <th class="text-center">Nationality</th>
                                                <th class="text-center">Absent Day</th>
                                                @if (AuthorizationService.AuthorizeAsync(User, Permissions.Module.Edit(Modules.Employee.ToString())).Result.Succeeded)
                                                {
                                                    <th class="text-center">Edit</th>
                                                }
                                                @if (AuthorizationService.AuthorizeAsync(User, Permissions.Module.Delete(Modules.Employee.ToString())).Result.Succeeded)
                                                {
                                                    <th class="text-center">Delete</th>
}
                                            </tr>
                                        </thead>
                                        <tbody>

                                            @foreach (var item in Model)
                                            {
                                            <tr>
                                                <td class="text-center">@item.Name</td>
                                                <td class="text-center">@item.Phone</td>
                                                <td class="text-center">@item.BarthDate.Day/@item.BarthDate.Month/@item.BarthDate.Year</td>
                                                <td class="text-center">@item.TypeState</td>
                                                <td class="text-center">@item.DateOfContract.Day/@item.DateOfContract.Month/@item.DateOfContract.Year</td>
                                                <td class="text-center">@item.Salary</td>
                                                <td class="text-center">@item.StartTime</td>
                                                <td class="text-center">@item.EndTime</td>
                                                <td class="text-center">@item.Nationality</td>
                                                <td class="text-center">@item.AbsentDay</td>
                                                @if (AuthorizationService.AuthorizeAsync(User, Permissions.Module.Edit(Modules.Employee.ToString())).Result.Succeeded)
                                                {
                                                    <td class="text-center">
                                                        <button class="btn btn-success mb-2">
                                                            <a asp-action="Edit" asp-controller="Employee" asp-route-id="@item.Id">Edit</a>
                                                        </button>
                                                    </td>
                                                }
                                                @if (AuthorizationService.AuthorizeAsync(User, Permissions.Module.Delete(Modules.Employee.ToString())).Result.Succeeded)
                                                {
                                                    <td class="text-center">
                                                        <button class="btn btn-danger mb-2">
                                                            <a asp-action="Delete" asp-controller="Employee" asp-route-id="@item.Id">Delete</a>
                                                        </button>
                                                    </td>
}
                                            </tr>
                                            }

                                        </tbody>

                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

        </div>
    </div>

